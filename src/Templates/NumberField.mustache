{{#t}}
<div class="{{elementClass}}" id="{{idPrefix}}{id}_container">
    {{#title}}<label for="{{idPrefix}}{{id}}">{{.}}:</label>{{/title}}
    <div class="input">
        <input type="text" name="{{name}}" id="{{idPrefix}}{{id}}" value="{{value}}" 
        {{#readonly}}readonly="readonly"{{/readonly}} 
        {{#disabled}}disabled="disabled"{{/disabled}} 
        class="{{#allowDecimal}}number{{/allowDecimal}}{{^allowDecimal}}digits{{/allowDecimal}} {{#required}}required{{/required}}" 
        {{#min}}min="{{.}}"{{/min}}
        {{#max}}max="{{.}}"{{/max}} />
    </div>
</div>
{{/t}}
