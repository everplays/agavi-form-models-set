<div class="{{elementClass}}" id="{{idPrefix}}{{id}}_container">
    {{#if title}}<label for="{{idPrefix}}{{id}}">{{title}}:</label>{{/if}}
    <div class="input">
        <div class="input-append">
            <input type="text" name="{{name}}" id="{{idPrefix}}{{id}}" value="{{value}}"{{#if readonly}} readonly="readonly"{{/if}}{{#if disabled}} disabled="disabled"{{/if}} class="date{{#if required}} required{{/if}}" />
        </div>
    </div>
</div>
{{/with}}
